<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="main_edt_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:hint">@string/put_url</item>
    </style>

    <style name="btn_style">
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">100dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
